<h1>Sign in</h1><br />

<div id="sign_in_form">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %>
  <%= f.label :password, :style => "margin: 0 0 0 135px;" %><br />
  <%= f.email_field :email %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %><%= f.submit "Sign in", :style => "float: right; margin: 0 33px 0 0;" %></div>
  <% end -%>

<% end %><br />
<%= render "devise/shared/links" %><br />
</div>
